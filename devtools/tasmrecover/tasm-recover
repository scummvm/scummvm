from tasm.parser import parser
from tasm.cpp import cpp

p = parser()
p.strip_path = 3
context = p.parse('dreamweb/dreamweb.asm')
p.link()
generator = cpp(context, "DreamGen", blacklist = [
	'randomnumber',
	'quickquit',
	'quickquit2',
	'seecommandtail',
	'multiget',
	'multiput',
	'multidump',
	'frameoutnm',
	'frameoutbh',
	'frameoutfx',
	'cls', 
	'printundermon',
	'kernchars',
	'getnextword',
	'getnumber',
	'dumptextline',
	'printboth',
	'printchar',
	'printdirect',
	'printslow',
	'usetimedtext',
	'putundertimed',
	'getundertimed',
	'worktoscreen',
	'width160',
	'convertkey',
	'readabyte',
	'readoneblock',
	'printsprites',
	'printasprite',
	'eraseoldobs',
	'clearsprites',
	'makesprite',
	'showframe',
	'initman',
	'walking',
	'spriteupdate',
	'dodoor',
	'liftsprite',
	'frameoutv',
	'modifychar',
	'lockmon',
	'cancelch0',
	'cancelch1'
	])
generator.generate('dreamweb') #start routine
